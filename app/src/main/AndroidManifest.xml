<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlazeSDKAndroidSampleApp"
        tools:targetApi="31">

        <!-- For a better orientation handling experience, especially for BlazeMomentsPlayerContainer component,
        we recommend adding the android:configChanges="orientation|screenSize" to the activity declaration.
        This helps in handling orientation changes more efficiently by preventing activity restarts and allowing
        the activity to handle configuration changes itself. -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.BlazeSDKAndroidSampleApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".viewpager.ViewPagerActivity"/>

        <!-- IMPORTANT - the following app id is a TEST id. You should use your own app id! -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />

    </application>

</manifest>